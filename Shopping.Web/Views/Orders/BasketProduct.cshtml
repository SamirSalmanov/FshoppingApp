@model List<Product>
@if (Model.Count > 0 && Model != null)
{
    <ul class="minicart-product-list">
        @foreach (var product in Model)
        {
            <li>
                <a href="single-product.html" class="image"><img src="@product.ProductPictures[0].Picture.Url" alt="Cart product Image"></a>
                <div class="content">
                    <a href="single-product.html" class="title">@product.Name</a>
                    <span class="quantity-price">1 x <span class="amount">@product.Price</span></span>
                    <a href="#" class="remove">×</a>
                </div>
            </li>
        }
    </ul>
}
else
{
    <span class="alert alert-danger" >Cart is Empty</span>
}

